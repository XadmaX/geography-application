FROM node:20-alpine
LABEL mantainer="xadmax@gmail.com"
WORKDIR /usr/src/app

COPY package.json /usr/src/app
COPY wait-mongo.sh /usr/src/app
RUN apk add curl --no-cache && npm install && chmod 755 wait-mongo.sh
COPY . /usr/src/app
RUN sed -i 's/\r$//' wait-mongo.sh

EXPOSE 4000

CMD ["node", "app.js"]
